@model Web.ViewModels.StandardIndexViewModel

@{
    ViewBag.Title = "Users";
}

<h2>Active Users UserList</h2>
<span style="word-spacing: 30px">
    @Html.ActionLink("InactiveUsers", "InactiveUserList", "User")
    @Html.ActionLink("ActiveUsers", "UserList", "User")
</span>
<table class="table">
    <tr>

        <th>
            Email Id
        </th>
        <th>
            Role
        </th>
        <th>
            Is Active
        </th>
        @*<th>
            Password
        </th>*@
        <th>
            Facility Assigned
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>*@
            <td>
                @for (var i = 0; i < item.ListOfFacilitiesAssigned.Count(); i++)
                {
                    @Html.DisplayFor(modelItem => item.ListOfFacilitiesAssigned.ElementAt(i).Name)
                    <br />
                }
            </td>
            <td>
                @Html.ActionLink("Edit/Deactivate User", "Edit", new { id = item.Id, })
            </td>
        </tr>
    }
</table>
