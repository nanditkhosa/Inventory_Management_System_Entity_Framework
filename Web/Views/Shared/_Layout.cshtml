<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.15/cr-1.3.3/fc-3.2.2/fh-3.1.2/r-2.1.1/rg-1.0.0/sc-1.4.2/datatables.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/Scripts/site-toastr.js")
    @Scripts.Render("~/Scripts/parsley.js")
    @Scripts.Render("~/Scripts/parsley.remote.js")
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/cr-1.3.3/fc-3.2.2/fh-3.1.2/r-2.1.1/rg-1.0.0/sc-1.4.2/datatables.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @{ var role = HttpContext.Current.Session["role"]; }
                    @if ((role != null) && role.Equals("admin"))
                    {
                        <li>@Html.ActionLink("Home", "FacilityList", "Facility")</li>
                        <li>@Html.ActionLink("Add New Facility", "Create", "Facility")</li>
                        <li>@Html.ActionLink("Add New User", "Create", "User")</li>
                        <li>@Html.ActionLink("Add New Resource", "Create", "Resource")</li>
                        <li>@Html.ActionLink("Report", "ViewReport", "Facility")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "UserHome", "Standard")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="tray_wrapper">
        @RenderBody()
        <div class="modal fade" id="genericFormModalTemplate" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button id="closeGenericFormModal" type="button" class="close btn btn-default" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 id="genericFormModalTitle" class="modal-title">Title</h4>
                    </div>
                    <div id="genericModalBody" class="modal-body"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <style>
            
        </style>
        </div>
        @RenderSection("scripts", required: false)
</body>
</html>
