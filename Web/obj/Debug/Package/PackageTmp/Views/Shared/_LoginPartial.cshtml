@{ var currentUser = HttpContext.Current.Session["firstName"]; }
@if (@currentUser != null)
{
    using (Html.BeginForm("LogOff", "Standard", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                <h4>@Html.Label("Hello "+ @currentUser)</h4>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Standard", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}